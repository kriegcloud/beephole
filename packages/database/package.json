{
  "name": "@beep/database",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "description": "The database template",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucas-barake/effect-monorepo.git",
    "directory": "packages/database"
  },
  "scripts": {
    "codegen": "build-utils prepare-v2",
    "build": "tsc -b tsconfig.build.json",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate",
    "db:migrate": "NODE_OPTIONS='--import tsx' drizzle-kit migrate",
    "db:push": "NODE_OPTIONS='--import tsx' drizzle-kit push",
    "db:studio": "NODE_OPTIONS='--import tsx' drizzle-kit studio"
  },
  "dependencies": {
    "@beep/kernel": "workspace:^",
    "@effect/platform": "0.80.6",
    "drizzle-orm": "0.39.2",
    "effect": "3.14.6",
    "pg": "8.13.1"
  },
  "effect": {
    "generateExports": {
      "include": ["**/*.ts"]
    },
    "generateIndex": {
      "include": ["**/*.ts"]
    }
  },
  "devDependencies": {
    "@types/pg": "^8.11.11",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.4"
  }
}
